import katex, { KaTeXOptions } from "katex";
console.log(KaTeXOptions);
export interface Props {
    tex: string, // A Tex Expression
    opts: KaTeXOptions, // KaTeX Options
};
const { tex = children.toString(), opts = {} } = Astro.props as Props;
const html: string = katex.renderToString(tex, opts);

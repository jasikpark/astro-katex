---
import katex from "katex";
import type KaTeXOptions from "@types/katex";

interface Props {
    tex: string, // A Tex Expression
    $scope,
    opts: KaTeXOptions, // KaTeX Options
};

const { tex, $scope, opts } = Astro.props as Props;
const html: string = katex.renderToString(tex, opts);
---
{html ?? html : <slot />}